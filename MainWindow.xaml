<Window x:Class="TextStatWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextStatWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000">
    <DockPanel>
        <StackPanel x:Name="stack">
            <ToolBar DockPanel.Dock="Top">
                <Label Margin="10">Enter text:</Label>
                <TextBox Name="tbMult" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" Width="300" Margin="10" TextChanged="tbMult_TextChanged"></TextBox>
                <Button x:Name="sent" Margin="10" Background="Aquamarine" Click="sent_Click">Count sentences</Button>
                <Button x:Name="symb" Margin="10" Background="Aquamarine" Click="symb_Click">Count symbols</Button>
                <Button x:Name="word" Margin="10" Background="Aquamarine" Click="word_Click">Count words</Button>
                <Button x:Name="quest" Margin="10" Background="Aquamarine" Click="quest_Click">Count questions</Button>
                <Button x:Name="excl" Margin="10" Background="Aquamarine" Click="excl_Click">Count exclamations</Button>
            </ToolBar>
            
        </StackPanel>
    </DockPanel>
</Window>
